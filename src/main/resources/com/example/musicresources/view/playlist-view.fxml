<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="model.Playlist" prefWidth="600.0" prefHeight="400.0">

    <Label fx:id="playlistNameLabel" layoutX="20" layoutY="20" text="Playlist: Default Name" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ImageView fx:id="albumArt" layoutX="20" layoutY="60" fitHeight="100" fitWidth="100" />

    <ListView fx:id="songListView" layoutX="150" layoutY="60" prefWidth="400" prefHeight="280" />


    <Label fx:id="nowPlayingLabel" layoutX="150" layoutY="350" text="Now Playing: None" />

    <HBox layoutX="20" layoutY="350" spacing="10">
        <Button fx:id="addSongButton" text="Add Song" />
        <Button fx:id="removeSongButton" text="Remove Song" />
        <Button fx:id="clearPlaylistButton" text="Clear Playlist" />
    </HBox>

</AnchorPane>
